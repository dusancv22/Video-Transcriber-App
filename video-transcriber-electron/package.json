{
  "name": "video-transcriber-electron",
  "version": "1.0.0",
  "description": "Modern Electron + React frontend for Video Transcriber App",
  "main": "dist/electron/main.js",
  "homepage": "./",
  "author": "Video Transcriber Team",
  "license": "MIT",
  "scripts": {
    "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
    "dev:vite": "vite",
    "dev:electron": "wait-on http://localhost:5175 && cross-env NODE_ENV=development VITE_DEV_SERVER_URL=http://localhost:5175 electron .",
    "build": "vite build && electron-builder",
    "build:vite": "vite build",
    "build:electron": "electron-builder",
    "preview": "vite preview",
    "test": "vitest",
    "test:ui": "vitest --ui",
    "test:integration": "vitest --config vitest.config.integration.ts",
    "test:integration:ui": "vitest --config vitest.config.integration.ts --ui",
    "test:integration:coverage": "vitest --config vitest.config.integration.ts --coverage",
    "test:security": "vitest --config vitest.config.integration.ts tests/integration/security",
    "test:settings": "vitest --config vitest.config.integration.ts tests/integration/settings",
    "test:file-ops": "vitest --config vitest.config.integration.ts tests/integration/file-operations",
    "test:backend": "vitest --config vitest.config.integration.ts tests/integration/backend",
    "test:e2e": "vitest --config vitest.config.integration.ts tests/e2e",
    "test:all": "npm run test && npm run test:integration",
    "lint": "eslint src --ext ts,tsx --report-unused-disable-directives --max-warnings 0",
    "lint:fix": "eslint src --ext ts,tsx --fix",
    "type-check": "tsc --noEmit",
    "dist": "npm run build && electron-builder",
    "pack": "electron-builder --dir",
    "postinstall": "electron-builder install-app-deps"
  },
  "dependencies": {
    "@emotion/react": "^11.11.3",
    "@emotion/styled": "^11.11.0",
    "@mui/icons-material": "^5.15.10",
    "@mui/material": "^5.15.10",
    "@mui/x-data-grid": "^6.19.4",
    "@tanstack/react-query": "^5.17.19",
    "axios": "^1.6.7",
    "cross-env": "^10.0.0",
    "date-fns": "^3.3.1",
    "lodash": "^4.17.21",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-dropzone": "^14.2.3",
    "react-router-dom": "^6.21.3",
    "socket.io-client": "^4.7.4",
    "uuid": "^9.0.1",
    "zustand": "^4.5.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.41.1",
    "@testing-library/jest-dom": "^6.2.0",
    "@testing-library/react": "^14.1.2",
    "@testing-library/user-event": "^14.5.2",
    "@types/lodash": "^4.14.202",
    "@types/react": "^18.2.48",
    "@types/react-dom": "^18.2.18",
    "@types/uuid": "^9.0.7",
    "@typescript-eslint/eslint-plugin": "^6.19.0",
    "@typescript-eslint/parser": "^6.19.0",
    "@vitejs/plugin-react": "^4.2.1",
    "@vitest/ui": "^1.2.1",
    "concurrently": "^8.2.2",
    "electron": "^28.2.0",
    "electron-builder": "^24.9.1",
    "eslint": "^8.56.0",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-react-refresh": "^0.4.5",
    "jsdom": "^24.0.0",
    "typescript": "^5.3.3",
    "vite": "^5.0.12",
    "vite-plugin-electron": "^0.28.1",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vitest": "^1.2.1",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.videotranscriber.app",
    "productName": "Video Transcriber",
    "directories": {
      "output": "dist-electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "!node_modules/**/*",
      "!src/**/*"
    ],
    "extraResources": [
      {
        "from": "../src",
        "to": "python-backend",
        "filter": [
          "**/*",
          "!**/__pycache__/**/*",
          "!**/.*"
        ]
      },
      {
        "from": "../requirements.txt",
        "to": "python-backend/"
      }
    ],
    "mac": {
      "target": {
        "target": "dmg",
        "arch": [
          "x64",
          "arm64"
        ]
      },
      "icon": "assets/icon.icns"
    },
    "win": {
      "target": {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.ico"
    },
    "linux": {
      "target": {
        "target": "AppImage",
        "arch": [
          "x64"
        ]
      },
      "icon": "assets/icon.png"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    }
  },
  "browserslist": {
    "production": [
      "last 1 electron version"
    ],
    "development": [
      "last 1 electron version"
    ]
  }
}
